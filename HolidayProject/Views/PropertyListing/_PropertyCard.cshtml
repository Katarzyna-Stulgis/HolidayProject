@model Domain.Entities.Property

<div class="card mb-3 col-12">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <img src="https://i.imgur.com/250X2v6.jpeg" class="card-img-top" alt="...">
        <p class="card-text">@Model.Blurb</p>
        <p><strong>Location:</strong> @Model.Location</p>
        <p><strong>Bedrooms:</strong> @Model.NumberOfBedrooms</p>
        <p><strong>Cost per Night:</strong> $@Model.CostPerNight</p>
        <a href="@Url.Action("ViewPropertyDetails", "PropertyListing", new { id = Model.PropertyId })" class="btn btn-primary">View Details</a>
    </div>
</div>