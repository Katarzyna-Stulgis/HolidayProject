<div>
    <h3>Search property</h3>
    <form asp-controller="PropertyListing" asp-action="ListAvailable" method="get" class="col-8 row">
        <div class="col-2 align-self-center">
            <input class="datetimepicker-input form-control" name="StartDate" id="startdate" placeholder="Start Date" />
        </div>
        <div class="col-1 d-flex justify-content-center align-items-center"> - </div>
        <div class="col-2 align-self-center">
            <input class="datetimepicker-input form-control" name="EndDate" id="enddate" placeholder="End Date" />
        </div>
        <button type="submit" class="btn btn-primary col-1">Search</button>
    </form>
</div>

<head>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#startdate").datepicker();
        });

        $(function () {
            $("#enddate").datepicker();
        });
    </script>
</head>