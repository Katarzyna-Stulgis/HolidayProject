@model Domain.Entities.Booking

<h2>Create Booking</h2>

<form method="post" action="/Booking/SubmitBooking">
    <div>
        <label for="UserEmail">Email:</label>
        <input type="email" id="UserEmail" name="UserEmail" required />
    </div>
    <div>
        <label for="BillingAddress">Billing Address:</label>
        <input type="text" id="BillingAddress" name="BillingAddress" required />
    </div>

    <input type="hidden" name="PropertyId" value="@Model.PropertyId" />
    <input type="hidden" name="StartDate" value="@Model.StartDate" />
    <input type="hidden" name="EndDate" value="@Model.EndDate" />

    <button type="submit">Submit Booking</button>
</form>